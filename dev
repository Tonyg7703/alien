#!/usr/bin/env bash

alien.dev() {
	local _PWD="$PWD"
	cd "$ALIEN_DIR" || exit

	case "$1" in
	build)
		# Build
		echo "ğŸ”¨ Alien is Building Itself ..."
		source "./build.bash"
		;;
	test)
		# Test
		echo "ğŸ§ª Alien is Testing ..."
		echo "testing is not implemented yet"
		;;
	watch)
		echo "ğŸ§ªğŸ‘ï¸ Alien Started Watching ..."
		source "./watch.bash"
		;;
	*)
		# Default
		echo "ğŸ‘½ Alien index"
		;;

	esac

	cd "$_PWD" || exit
}

alien.dev "$@"
